<%= render :partial => 'menu' %>

<div class="content">
  <h2>ランキング</h2>
  <div>
  <% if @games.size > 0 -%>
    <% @games.each do |g| -%>
      <span style="font-size: <%= 500 / (@games.index(g) + 1) + 100 %>%">
        <%= @games.index(g) + 1 %>位. <%= g.score %>回 <%= g.name %>さん
      </span>
      [<%= g.created_at.localtime.strftime("%m/%d %H:%M") %>]<br/>
      <% if g.items.size > 0 -%>
      <div style="margin:0px 0px 0px 20px;">
        <%= "#{g.items.map {|i| iknow_item_link(i)}.join(image_tag 'arrow-right.png')}" %>
      </div>
  <% end -%>

    <% end -%>
    <%= will_paginate(@games) %>
  <% else -%>
    １件もありません。
  <% end -%>
  </div>
</div>
