<h1>Last and First (Shiritori) by iKnow! API</h1>
<% unless @game -%>
  <%= link_to 'ゲーム開始', :action => :new %>
<% else -%>
  <%= link_to 'ゲーム終了', :action => :destroy %> 
<% end -%>

<% @game and @game.history.each do |i| -%>
  <% if i -%>
  <table>
    <tr>
      <td><%= i.spell %></td>
      <td><%= i.kana %></td>
    </tr>
  </table>
  <% end -%>
<% end -%>

<% form_tag :action => :index do -%>
  <%= text_field_tag :first_word %>
  <%= submit_tag '送信！' %>
<% end -%>
