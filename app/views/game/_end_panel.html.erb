<div id="endPanel" class="panel">
  <br/>
  <%= @game.name %>さんのスコアは、
  <b><span id="game_score"><%= @game.score %></span>回</b>
  でした！<br/>
  <%= link_to 'もう一度やる！', :action => :index %> |
  <%= link_to 'ランキングを見る', :controller => :ranking %>
</div>
<% javascript_tag do -%>
  var endPanel = new YAHOO.widget.Panel("endPanel",
    { close: true, width: "300px", height: "100px", fixedCenter: true, modal: true});
  endPanel.setHeader("ゲームオーバー！")
<% end -%>
